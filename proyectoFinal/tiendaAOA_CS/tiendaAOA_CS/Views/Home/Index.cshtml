            @if (ViewBag.recientes.Count > 0)
            {
                foreach (var productoReciente in ViewBag.recientes)
                {
                    <div class="col-lg-3">
                        <div class="product-item">
                            <div class="product-title">
                                <a href="#">@productoReciente.descripcion</a>
                                <div class="ratting">
