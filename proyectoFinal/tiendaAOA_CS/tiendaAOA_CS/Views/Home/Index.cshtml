    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <h1>Escríbenos</h1>
            </div>
            <div class="col-md-6">
                <div class="form">
                    <input type="email" value="Your email here">
                    <button>Submit</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Recientes -->
